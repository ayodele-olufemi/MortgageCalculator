<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Mortgage Calculator</title>
        <script src="https://code.jquery.com/jquery-3.4.1.js" integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU=" crossorigin="anonymous"></script>
    </head>
    <body>
        @model MortgageDataIn

        @{
            ViewData["Title"] = "Home Page";
        }

        <div>
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 style="text-align: center">Mortgage Calculator</h1>
                </div>
                <div class="card-body">
                    <form asp-controller="home" asp-action="CalculateMortgageAndAmortization" method="post" class="mt-3">
                        <h2>Customer Details</h2>
                        <div class="form-group row">
                            <label asp-for="CustomerDetails.FirstName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="CustomerDetails.FirstName" class="form-control" placeholder="First Name" />
                                <span asp-validation-for="CustomerDetails.FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="CustomerDetails.MiddleName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="CustomerDetails.MiddleName" class="form-control" placeholder="Middle Name" />
                                <span asp-validation-for="CustomerDetails.MiddleName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="CustomerDetails.LastName" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="CustomerDetails.LastName" class="form-control" placeholder="Last Name" />
                                <span asp-validation-for="CustomerDetails.LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="CustomerDetails.Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="CustomerDetails.Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="CustomerDetails.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <h2>Mortgage Details</h2>
                        <div class="form-group row">
                            <label asp-for="LoanAmount" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="LoanAmount" class="form-control" placeholder="Loan Amount" />
                                <span asp-validation-for="LoanAmount" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="AnnualRate" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="AnnualRate" class="form-control" placeholder="Annual Rate (%)" />
                                <span asp-validation-for="AnnualRate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DurationYears" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="DurationYears" class="form-control" placeholder="Duration Years" />
                                <span asp-validation-for="DurationYears" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="DurationMonths" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="DurationMonths" class="form-control" placeholder="Duration Months" />
                                <span asp-validation-for="DurationMonths" class="text-danger"></span>
                            </div>
                        </div>
                        <div>
                            <input type="checkbox" name="compareConfiguration" value="" />
                            <label>Compare more configurations?</label><span>    </span>
                            <input type="button" name="addConf" value="Add" />
                        </div>
                        <div>
                            <button type="submit" class="alert-primary col-sm-2">Calculate</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="card" hidden="hidden">

            </div>
        </div>
    </body>
 
</html>




    